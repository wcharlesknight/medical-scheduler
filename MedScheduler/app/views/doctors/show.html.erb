<h1 class="text-center"><%= @doctor.name %></h1>
<h3>Specialty: <%= link_to @doctor.specialty.name, @doctor.specialty, class: "a:link" %></h3>
<h3>Pharmacy: <%= link_to @doctor.pharmacy.name, @doctor.pharmacy, class: "a:link"%></h3>
<h3>Hospital: <%= link_to @doctor.hospital.name, @doctor.hospital, class: "a:link"%></h3>
<b>Average Cost per Visit: <%= "$#{@doctor.cost_s}" %></b><br><br>

<%= form_tag doctor_path, :method => "patch" do %>
<%= label_tag(:rating, "Leave a rating:") %> 
<%= text_field_tag :rating %>
<%= submit_tag("Submit", :name => nil) %><br>
<%= "Must be a number 1-10" %>
<%end%>
<%= flash[:notrating] %>

<h3>Rating: <%= @doctor.rating %></h3>
<h4><%= "Appointments:" %></h4>
<% @doctor.appointments.each do |d| %>
<%= "Patient Name: #{Patient.find(d.patient_id).name}" %><br>
<%= "Date: #{Datetime.find(d.datetime_id).date}" %><br>
<% end %>

<%= link_to "Back to Homepage", patients_path %>



